@model StoreOnline.Models.tbl_product
@{

}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<div id="main-div">
    <div id="box" class="img-responsive">
        @using (Html.BeginForm("CreateAd",
                        "User",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
        {
            <div class="insidebox">
                <div> <h1>Post An Ad</h1></div>



                <div class="form-group">
                    <div class="input-group">
                        @Html.DropDownListFor(x => x.pro_fk_ad, ViewBag.categorylist as SelectList, "--select--", new { @class = "form-control" })
                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.pro_fk_ad) </span>

                </div>

                <div class="form-group">
                    <div class="input-group">
                        @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                        @Html.TextBoxFor(x => x.pro_name, new { @class = "form-control", @placeholder = "Product Name" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.pro_name) </span>

                </div>

                <div class="form-group">
                    <div class="input-group">
                        @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                        @Html.TextBoxFor(x => x.pro_price, new { @class = "form-control", @placeholder = "Price" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.pro_price) </span>

                </div>

                <div class="form-group">
                    <div class="input-group">
                        @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@


                    </div>
                </div>                   



                <div class="form-group">
                    <div class="input-group">
                        <input type="file" name="imgfile" id="imgfile" class="form-control" required="required" />
                    </div>
                </div>

                <div class="form-group">

                    <input type="submit" value="Add"/>

                </div>

                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>



            </div>

        }
    </div>

</div>


<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
